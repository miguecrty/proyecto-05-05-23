<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>LOCUTORIO MAL HECHO</title>
    <link rel="stylesheet" href="estilos/cabecera.css">
    <link rel="shortcut icon" href="imagenes/logo.png">
    <link rel="stylesheet" href="estilos/consultaejs.css">
    <script  type="text/javascript" src="js/consulta.js "></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@latest/dist/Chart.min.js"></script>

  </head>
  <header id="cabecera">
    <a href="/">
    <img id="img" src="/imagenes/header.png" alt="G.R" />
    </a>
      <ul class="main-menu">
      <li class="cta" onclick="cerrarSesion()">Cerrar Sesi√≥n</li>
    </ul>
    <script>
      function cerrarSesion() {
        // Crear un elemento de formulario
        const form = document.createElement('form');
        form.method = 'POST';
        form.action = '/logout';
        document.body.appendChild(form);
        form.submit();
      }
    </script>
  </header>
  <body>
<div class="container">
  <div class="left">
    
  <br>
  <div class="select-custom">
    <div id="seleccion" class = "seleccion"></div>
    <div id="tiempo" class = "seleccion"></div>
    <div class="select-header">Seleccione equipo a monitorizar</div>
    <div class="select-options">
      <% pcs.forEach(opcion => { %>
        <div id="opciones-select" class="select-option" data-value="<%= opcion.id %>">
          <img src="<%= opcion.img %>" alt="<%= opcion.alt_imagen %>">
         <span class="option-text" id="<%= opcion.id %>"></span>
          <table class="table-option">
            <tr>
              <th>Nombre</th>
              <th>Sistema Operativo</th>
              <th>Direccion IP</th>
            </tr>
            <tr>
              <td><%= opcion.syscontact %></td>
              <td><%= opcion.sys_name %></td>
              <td><%= opcion.ip %></td>
            </tr>
        </table>
        </div>
      <% }); %>
    </div>
  </div>
    <ul id="datos"></ul>
  </div>
  <div class="right">
      <div style="display: flex; flex-wrap: wrap; width: 100%; height: 100%;">
      <div style="flex-basis: 33%; height: 50%;">
      <div class="tit-grafica">IfInOctects</div>
      <div id="grafica1" class="cont-grafica" style="display: none;">
        <canvas class="graficas" id="myChart"></canvas>
      </div>
      </div>
      <div style="flex-basis: 33%; height: 50%;">
        <div class="tit-grafica">IfOutOctects</div>
        <div id="grafica2" class="cont-grafica" style="display: none;">
          <canvas class="graficas" id="myChart2"></canvas>
        </div>
      </div>
      <div style="flex-basis: 33%; height: 50%;">
        <div class="tit-grafica">RAM</div>
        <div id="grafica3" class="cont-grafica" style="display: none;">
          <canvas class="graficas" id="myChart3"></canvas>
        </div>
      </div>
      <div style="flex-basis: 33%; height: 50%;">
        <div class="tit-grafica">CPU</div>
        <div id="grafica4" class="cont-grafica" style="display: none;">
          <canvas class="graficas" id="myChart4"></canvas>
        </div>
      </div>
      <div style="flex-basis: 33%; height: 50%;">
        <div class="tit-grafica">GRAFICA 5</div>
        <div id="grafica5" class="cont-grafica" style="display: none;"> 
          <canvas class="graficas" id="myChart5"></canvas>
        </div>
      </div>
      <div style="flex-basis: 33%; height: 50%;">
        <div class="tit-grafica">GRAFICA 6</div>
        <div id="grafica6" class="cont-grafica" style="display: none;">
          <canvas class="graficas" id="myChart6"></canvas>
        </div>
      </div>
    </div>
  </div>
</div>
<script>
  const cabecera = document.querySelector('#cabecera');
  
  let cabeceraVisible = false;
  
  window.addEventListener('mousemove', (event) => {
    if (event.clientY <= 60 && !cabeceraVisible) {
      cabecera.classList.remove('oculto');
      cabeceraVisible = true;
    } else if (event.clientY > 60 && cabeceraVisible) {
      cabecera.classList.add('oculto');
      cabeceraVisible = false;
    }
  });
</script>
</body>
</html>
